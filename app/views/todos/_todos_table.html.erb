<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>ステータス</th>
      <th>優先度</th>
      <th>カテゴリ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% todos.each do |todo| %>
      <tr>
        <td><%= link_to todo do %><%= todo.title %><% end %></td>
        <td><%= todo.body %></td>
        <td><%= todo.status %></td>
        <td><%= todo.priority %></td>
        <td><%= todo.category.try(:name) %></td>
        <td><%= link_to '完了', status_todo_path(todo, status: 1), method: :patch %></td>
        <td><%= link_to '編集', edit_todo_path(todo) %></td>
        <td><%= link_to '削除', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @todos %>
