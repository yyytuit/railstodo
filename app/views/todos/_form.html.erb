<%= form_with(model: todo, local: true) do |form| %>
  <%= render 'shared/errors', object: @todo %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 5 %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.number_field :priority %>
  </div>
  <% @categories = Category.all %>
  <%= form.label :category %>
  <%= form.select(:category_id, @categories.map{|t| [t.name, t.id]}, include_blank: true) %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
